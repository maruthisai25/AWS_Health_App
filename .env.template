# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# AWS Configuration
AWS_ACCOUNT_ID=123456789012
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Domain Configuration (optional)
DOMAIN_NAME=education.example.com
CERTIFICATE_ARN=arn:aws:acm:us-east-1:123456789012:certificate/xxxxxxxx

# Database Configuration
DB_USERNAME=eduadmin
DB_PASSWORD=ChangeMeToSecurePassword123!
DB_NAME=education_platform

# Application Configuration
COGNITO_REGION=us-east-1
API_GATEWAY_STAGE=v1
FRONTEND_URL=https://education.example.com
API_URL=https://api.education.example.com

# GitHub Configuration
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxx
GITHUB_REPOSITORY=your-org/aws-education-platform

# Notification Configuration
ADMIN_EMAIL=admin@example.com
SUPPORT_EMAIL=support@example.com
FROM_EMAIL=noreply@education.example.com

# Security Configuration
KMS_KEY_ALIAS=alias/education-platform
WAF_RATE_LIMIT=2000

# Monitoring Configuration
CLOUDWATCH_RETENTION_DAYS=30
ALARM_EMAIL=alerts@example.com

# Environment Tags
ENVIRONMENT=dev
PROJECT=education-platform
COST_CENTER=education
OWNER=platform-team

# Feature Flags
ENABLE_MFA=true
ENABLE_VIDEO_TRANSCODING=true
ENABLE_CHAT_SEARCH=true
ENABLE_ATTENDANCE_GEO_VALIDATION=false

# Resource Limits
MAX_VIDEO_SIZE_MB=1024
MAX_CHAT_MESSAGE_LENGTH=1000
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5

# Development Settings
DEBUG=false
LOG_LEVEL=info
