# AWS Education Platform - Frontend Environment Variables
# Copy this file to .env and update with your actual values

# API Configuration
REACT_APP_API_URL=https://your-api-gateway-url.amazonaws.com/dev
REACT_APP_WEBSOCKET_URL=wss://your-appsync-realtime-url.amazonaws.com/graphql

# AWS Configuration
REACT_APP_AWS_REGION=us-east-1
REACT_APP_AWS_USER_POOL_ID=us-east-1_XXXXXXXXX
REACT_APP_AWS_USER_POOL_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXX
REACT_APP_AWS_IDENTITY_POOL_ID=us-east-1:XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX

# AppSync Configuration
REACT_APP_APPSYNC_GRAPHQL_ENDPOINT=https://your-appsync-api-id.appsync-api.us-east-1.amazonaws.com/graphql
REACT_APP_APPSYNC_REGION=us-east-1
REACT_APP_APPSYNC_AUTHENTICATION_TYPE=AMAZON_COGNITO_USER_POOLS

# Video Configuration
REACT_APP_VIDEO_BUCKET_URL=https://your-video-bucket.s3.amazonaws.com
REACT_APP_VIDEO_CLOUDFRONT_URL=https://your-cloudfront-distribution.cloudfront.net

# Feature Flags
REACT_APP_ENABLE_CHAT=true
REACT_APP_ENABLE_VIDEO=true
REACT_APP_ENABLE_ATTENDANCE=true
REACT_APP_ENABLE_MARKS=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# Development Settings
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=info

# Analytics (Optional)
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_MIXPANEL_TOKEN=

# Sentry Error Tracking (Optional)
REACT_APP_SENTRY_DSN=