# AWS Education Platform Frontend Environment Variables
# Copy this file to .env.local and update the values

# Application Configuration
REACT_APP_NAME=AWS Education Platform
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# API Configuration
# Replace with your actual API Gateway URL after deployment
REACT_APP_API_URL=https://your-api-gateway-id.execute-api.us-east-1.amazonaws.com/dev

# AWS Cognito Configuration
# Replace with your actual Cognito configuration after deployment
REACT_APP_AWS_REGION=us-east-1
REACT_APP_USER_POOL_ID=us-east-1_xxxxxxxxx
REACT_APP_USER_POOL_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
REACT_APP_IDENTITY_POOL_ID=us-east-1:xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Website Configuration
REACT_APP_WEBSITE_URL=https://your-cloudfront-domain.cloudfront.net
REACT_APP_SUPPORT_EMAIL=support@yourdomain.com

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_CHAT=true
REACT_APP_ENABLE_VIDEO=true
REACT_APP_ENABLE_ATTENDANCE=true
REACT_APP_ENABLE_MARKS=true

# Development Tools
REACT_APP_ENABLE_REDUX_DEVTOOLS=true
REACT_APP_LOG_LEVEL=debug

# External Services (Optional)
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=

# Build Configuration
GENERATE_SOURCEMAP=true
